# Handle text files with consistent line endings
* text=auto

# Set line endings to LF for Python files
*.py text eol=lf

# Set line endings to CRLF for Windows-specific files
*.bat text eol=crlf

# Treat log files as binary (no diffing/merging)
*.log binary

# Treat image files as binary (no diffing/merging)
*.png binary
*.jpg binary
*.gif binary

# Ignore merging for .env files
*.env merge=ours

# Ensure all files in the project are handled consistently for line endings
* text=auto
*.sh text eol=lf
*.js text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
